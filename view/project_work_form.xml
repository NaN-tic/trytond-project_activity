<data>
    <xpath expr="/form/field[@name='party_address']" position="after">
        <label name="resource"/>
        <field name="resource"/>
    </xpath>
    <xpath expr="/form/notebook" position="inside">
        <page name="activities" col="6">
            <field name="conversation" widget="document" toolbar="0" yexpand="1" yfill="1" colspan="3"/>
            <field name="conversation_filename" invisible="1"/>
            <group id="activity" colspan="3" yexpand="1" yfill="1">
                <label name="last_action_date"/>
                <field name="last_action_date"/>
                <label name="channel"/>
                <field name="channel"/>
                <label name="contact_name"/>
                <field name="contact_name"/>
                <field name="activities" colspan="4"/>
            </group>
        </page>
    </xpath>
</data>
